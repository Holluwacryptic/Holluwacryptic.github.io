---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogCard from '../components/BlogCard.astro';
import { siteConfig } from '../config';
import '../styles/global.css';

// Get all blog posts
const allPosts = await Astro.glob('../../content/blog/*.md');

// Sort posts by date (newest first)
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>Blog | {siteConfig.name}</title>
  <meta name="description" content="Read my latest thoughts on robotics, engineering, and technology.">
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
    rel="stylesheet"
  />
</head>
<body class="bg-gray-50 dark:bg-gray-900">
  <Header />
  
  <main class="max-w-6xl mx-auto px-4 py-32 sm:px-6 lg:px-8">
    <div class="mb-16 animate-fade-in">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6 tracking-tight">
        Blog
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl">
        Thoughts on robotics, engineering, and technology
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {sortedPosts.map((post, index) => {
        const slug = post.file.split('/').pop()?.replace('.md', '') || '';
        return (
          <div 
            class="animate-slide-up"
            style={`animation-delay: ${index * 100}ms`}
          >
            <BlogCard
              title={post.frontmatter.title}
              date={post.frontmatter.date}
              description={post.frontmatter.description}
              slug={slug}
            />
          </div>
        );
      })}
    </div>

    {sortedPosts.length === 0 && (
      <div class="text-center py-24">
        <p class="text-gray-600 dark:text-gray-400 text-lg">
          No blog posts yet. Check back soon!
        </p>
      </div>
    )}
  </main>

  <Footer />
</body>
</html>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }

  .animate-slide-up {
    opacity: 0;
    animation: slide-up 0.6s ease-out forwards;
  }

</style>
