---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// You can move this data to src/config.ts or a separate data file
const resumeData = {
  contact: {
    email: "your.email@example.com",
    phone: "+1 (555) 123-4567",
    location: "Lagos, Nigeria",
    linkedin: "linkedin.com/in/yourprofile",
    github: "github.com/holluwacryptic"
  },
  
  summary: "Passionate full-stack developer with expertise in modern web technologies. Experienced in building scalable applications and delivering high-quality code. Strong problem-solving skills and a commitment to continuous learning.",
  
  experience: [
    {
      title: "Senior Software Developer",
      company: "Tech Company Inc.",
      location: "Remote",
      period: "Jan 2023 - Present",
      responsibilities: [
        "Led development of customer-facing web applications using React and TypeScript",
        "Implemented CI/CD pipelines reducing deployment time by 40%",
        "Mentored junior developers and conducted code reviews",
        "Collaborated with cross-functional teams to deliver features on schedule"
      ]
    },
    {
      title: "Frontend Developer",
      company: "Digital Agency",
      location: "Lagos, Nigeria",
      period: "Jun 2021 - Dec 2022",
      responsibilities: [
        "Developed responsive websites and web applications for various clients",
        "Optimized application performance improving load times by 50%",
        "Worked closely with designers to implement pixel-perfect UI designs",
        "Maintained and updated existing client websites"
      ]
    },
    {
      title: "Junior Developer",
      company: "Startup Co.",
      location: "Lagos, Nigeria",
      period: "Jan 2020 - May 2021",
      responsibilities: [
        "Built and maintained features for the company's main product",
        "Fixed bugs and implemented user-requested features",
        "Participated in daily stand-ups and sprint planning",
        "Wrote documentation for internal tools and APIs"
      ]
    }
  ],
  
  education: [
    {
      degree: "Bachelor of Science in Computer Science",
      school: "University of Lagos",
      location: "Lagos, Nigeria",
      year: "2019",
      gpa: "3.8/4.0"
    }
  ],
  
  skills: {
    "Languages": ["JavaScript", "TypeScript", "Python", "HTML", "CSS"],
    "Frameworks & Libraries": ["React", "Next.js", "Astro", "Node.js", "Express", "Tailwind CSS"],
    "Tools & Technologies": ["Git", "Docker", "AWS", "PostgreSQL", "MongoDB", "REST APIs"],
    "Soft Skills": ["Problem Solving", "Team Collaboration", "Communication", "Leadership"]
  },
  
  certifications: [
    {
      name: "AWS Certified Developer - Associate",
      issuer: "Amazon Web Services",
      year: "2023"
    },
    {
      name: "Professional Scrum Master I",
      issuer: "Scrum.org",
      year: "2022"
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resume | Your Portfolio</title>
  <meta name="description" content="Professional resume showcasing my experience, education, and skills.">
</head>
<body class="bg-gray-50 dark:bg-gray-900">
  <Header />
  
  <main class="max-w-5xl mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 mb-8">
      <div class="flex justify-between items-start flex-wrap gap-4">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">
            Your Name
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            Full-Stack Developer
          </p>
        </div>
        
        <div class="text-right">
          <a href="#" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg inline-block transition-colors">
            Download PDF
          </a>
        </div>
      </div>
      
      <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700 dark:text-gray-300">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <a href={`mailto:${resumeData.contact.email}`} class="hover:text-blue-600 dark:hover:text-blue-400">
            {resumeData.contact.email}
          </a>
        </div>
        
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span>{resumeData.contact.phone}</span>
        </div>
        
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span>{resumeData.contact.location}</span>
        </div>
        
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <a href={`https://${resumeData.contact.github}`} target="_blank" class="hover:text-blue-600 dark:hover:text-blue-400">
            {resumeData.contact.github}
          </a>
        </div>
      </div>
    </div>

    <!-- Summary Section -->
    <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
        Professional Summary
      </h2>
      <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
        {resumeData.summary}
      </p>
    </section>

    <!-- Experience Section -->
    <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        Work Experience
      </h2>
      
      <div class="space-y-8">
        {resumeData.experience.map((job, index) => (
          <div class={index !== resumeData.experience.length - 1 ? 'border-b border-gray-200 dark:border-gray-700 pb-8' : ''}>
            <div class="flex justify-between items-start flex-wrap gap-2 mb-3">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                  {job.title}
                </h3>
                <p class="text-blue-600 dark:text-blue-400 font-medium">
                  {job.company}
                </p>
              </div>
              <div class="text-right">
                <p class="text-gray-600 dark:text-gray-400">{job.period}</p>
                <p class="text-gray-600 dark:text-gray-400 text-sm">{job.location}</p>
              </div>
            </div>
            
            <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
              {job.responsibilities.map((resp) => (
                <li>{resp}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Education Section -->
    <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        Education
      </h2>
      
      {resumeData.education.map((edu) => (
        <div>
          <div class="flex justify-between items-start flex-wrap gap-2 mb-2">
            <div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                {edu.degree}
              </h3>
              <p class="text-blue-600 dark:text-blue-400">
                {edu.school}
              </p>
            </div>
            <div class="text-right">
              <p class="text-gray-600 dark:text-gray-400">{edu.year}</p>
              <p class="text-gray-600 dark:text-gray-400">{edu.location}</p>
            </div>
          </div>
          {edu.gpa && (
            <p class="text-gray-700 dark:text-gray-300">GPA: {edu.gpa}</p>
          )}
        </div>
      ))}
    </section>

    <!-- Skills Section -->
    <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        Skills
      </h2>
      
      <div class="grid gap-6">
        {Object.entries(resumeData.skills).map(([category, skills]) => (
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
              {category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skills.map((skill) => (
                <span class="px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full text-sm font-medium">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Certifications Section -->
    <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        Certifications
      </h2>
      
      <div class="space-y-4">
        {resumeData.certifications.map((cert) => (
          <div class="flex justify-between items-center">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                {cert.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {cert.issuer}
              </p>
            </div>
            <span class="text-gray-600 dark:text-gray-400">
              {cert.year}
            </span>
          </div>
        ))}
      </div>
    </section>
  </main>

  <Footer />
</body>
</html>
