---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  frontmatter: {
    title: string;
    date: string;
    description: string;
    author?: string;
  };
}

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{frontmatter.title} | Your Portfolio</title>
  <meta name="description" content={frontmatter.description}>
</head>
<body class="bg-gray-50 dark:bg-gray-900">
  <Header />
  
  <article class="max-w-4xl mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <header class="mb-12">
      <a 
        href="/blog" 
        class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline mb-8"
      >
        ← Back to Blog
      </a>
      
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {frontmatter.title}
      </h1>
      
      <div class="flex items-center text-gray-600 dark:text-gray-400">
        <time datetime={frontmatter.date}>
          {new Date(frontmatter.date).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        {frontmatter.author && (
          <>
            <span class="mx-2">•</span>
            <span>By {frontmatter.author}</span>
          </>
        )}
      </div>
    </header>

    <div class="prose prose-lg dark:prose-invert max-w-none
                prose-headings:text-gray-900 dark:prose-headings:text-white
                prose-p:text-gray-700 dark:prose-p:text-gray-300
                prose-a:text-blue-600 dark:prose-a:text-blue-400
                prose-strong:text-gray-900 dark:prose-strong:text-white
                prose-code:text-gray-900 dark:prose-code:text-white
                prose-pre:bg-gray-800 dark:prose-pre:bg-gray-950">
      <slot />
    </div>
  </article>

  <Footer />
</body>
</html>
